<svg class="theme--pure">
	<image id="editing" href="images/editing.png" class="bg bg--editing" x="0" y="0" display="none" />
	<image id="background" href="images/background.png" class="bg theme-color--accent-background">
		<!-- Animate in -->
		<animate attributeName="opacity" from="0" to="1" dur="0.4s" begin="load" easing="ease-in" />

		<!-- Animate out -->
		<animate attributeName="opacity" from="1" to="0" dur="0.4s" begin="unload" easing="ease-in" />
	</image>

	<g id="top-bar">
		<section id="battery-display">
			<line id="battery-indicator" x1="12" y1="13" x2="50" y2="13" stroke-width="12" stroke-linecap="butt" />
			<image id="battery-icon" href="images/battery.png" class="icon primary" x="10" y="-2" />
			<text id="battery-level" class="text--bold text--sm primary" text-anchor="start" text-length="4" x="$+10" y="21" />
			<!-- <text id="battery-until-charged" class="text text--xs secondary" text-anchor="start" text-length="14" x="10" y="38" /> -->
		</section>

		<g id="date-day-display" opacity="0">
			<text id="date-day" class="text text--lg primary theme-color--accent-foreground" text-anchor="middle" text-length="2" x="50%" y="25" />

			<!-- Animate in -->
			<animate attributeName="opacity" from="0" to="1" dur="0.4s" begin="load" easing="ease-in" />

			<!-- Animate out -->
			<animate attributeName="opacity" to="0" dur="0.4s" begin="unload" easing="ease-in" />
		</g>

		<section id="heartrate-display">
			<g id="heartrate-icon--pulse" class="heartrate-icon" transform="translate(100%-26,12)" display="none">
				<image href="images/heart.png" class="icon primary theme-color--accent-foreground" x="-16" y="-16" />
				<animateTransform attributeType="scale" from="1" to="0.9" begin="enable" end="disable" dur="0.1s" easing="ease-out" final="freeze" />
				<animateTransform attributeType="scale" from="0.9" to="1.2" begin="enable+0.1s" end="disable" dur="0.2s" easing="ease-in" final="freeze" />
				<animateTransform attributeType="scale" from="1.2" to="0.95" begin="enable+0.3s" end="disable" dur="0.1s" easing="ease-in" final="freeze" />
				<animateTransform attributeType="scale" from="0.95" to="1" begin="enable+0.4s" end="disable" dur="0.1s" easing="ease-out" final="freeze" />
			</g>

			<g id="heartrate-icon--interval" class="heartrate-icon" transform="translate(100%-26,12)" display="none">
				<image href="images/heart.png" class="icon primary theme-color--accent-foreground" x="-16" y="-16" />
				<animateTransform attributeType="scale" from="1" to="0.9" begin="enable" end="disable" dur="0.1s" easing="ease-out" final="freeze" repeatDur="1" repeatCount="indefinite" />
				<animateTransform attributeType="scale" from="0.9" to="1.2" begin="enable+0.1s" end="disable" dur="0.2s" easing="ease-in" final="freeze" repeatDur="1" repeatCount="indefinite" />
				<animateTransform attributeType="scale" from="1.2" to="0.95" begin="enable+0.3s" end="disable" dur="0.1s" easing="ease-in" final="freeze" repeatDur="1" repeatCount="indefinite" />
				<animateTransform attributeType="scale" from="0.95" to="1" begin="enable+0.4s" end="disable" dur="0.1s" easing="ease-out" final="freeze" repeatDur="1" repeatCount="indefinite" />
			</g>

			<g id="heartrate-icon--off" class="heartrate-icon" transform="translate(100%-42,-4)" display="none">
				<image href="images/heart.png" class="icon primary theme-color--accent-foreground" x="0" y="0" />
			</g>

			<text id="heartrate-rate" class="text--bold text--lg primary" text-anchor="start" text-length="3" y="25" />
			<g>
				<text id="heartrate-resting" class="text--bold text--sm secondary" text-anchor="end" text-length="5" y="21" />

				<animate attributeName="opacity" to="0" dur="0s" begin="select" easing="ease-in" />
				<animate attributeName="opacity" to="1" dur="0.4s" begin="select" easing="ease-in" />
			</g>
		</section>

		<!-- Animate in -->
		<animate attributeName="opacity" from="0" to="1" dur="0.4s" begin="load" easing="ease-in" />
		<animateTransform attributeType="translate" from="0,-30" to="0,8" dur="0.3s" begin="load" easing="ease-in" />
		<animateTransform attributeType="translate" from="0,8" to="0,6" dur="0.1s" begin="load+0.3s" easing="ease-out" />

		<!-- Animate out -->
		<animate attributeName="opacity" from="1" to="0" dur="0.4s" begin="unload" easing="ease-in" />
		<animateTransform attributeType="translate" from="0,6" to="0,8" dur="0.1s" begin="unload" easing="ease-out" />
		<animateTransform attributeType="translate" from="0,8" to="0,-30" dur="0.3s" begin="unload+0.1s" easing="ease-in" />
	</g>

	<g id="time-display" transform="translate(0, 34%)">
		<image id="time-hour0" href="images/0.png" class="digit" x="1%" y="0" fill-opacity="1">
			<!-- Animate in -->
			<animate id="aod-animate-in-fill" attributeName="fill" from="fb-white" to="fb-white" dur="0.4s" begin="load" easing="ease-in" />
			<animate id="aod-animate-in-fill-opacity" attributeName="fill-opacity" to="1" dur="0.4s" begin="load" easing="ease-in" />

			<!-- Animate out -->
			<animate id="aod-animate-out-fill" attributeName="fill" to="fb-white" dur="0.4s" begin="unload" easing="ease-in" />
			<animate id="aod-animate-out-fill-opacity" attributeName="fill-opacity" to="1" dur="0.4s" begin="unload" easing="ease-in" />
		</image>
		<image id="time-hour1" href="images/0.png" class="digit primary" x="$" y="0" />

		<image id="time-separator" href="images/separator.png" class="digit theme-color--accent-foreground" x="50%-6" y="0" fill-opacity="0.5">
			<animate attributeName="fill-opacity" from="0.5" to="0" dur="0.5s" begin="enable" end="disable" easing="ease-out" final="freeze" repeatDur="1" repeatCount="indefinite" />
			<animate attributeName="fill-opacity" from="0" to="0.5" dur="0.5s" begin="enable+0.5s" end="disable" easing="ease-out" final="freeze" repeatDur="1" repeatCount="indefinite" />

			<!-- Animate in -->
			<animate id="aod-animate-in-fill" attributeName="fill" from="fb-white" to="fb-white" dur="0.4s" begin="load" easing="ease-in" />
			<animate id="aod-animate-in-fill-opacity" attributeName="fill-opacity" to="1" dur="0.4s" begin="load" easing="ease-in" />

			<!-- Animate out -->
			<animate id="aod-animate-out-fill" attributeName="fill" from="fb-white" to="fb-white" dur="0.4s" begin="unload" easing="ease-in" />
			<animate id="aod-animate-out-fill-opacity" attributeName="fill-opacity" to="1" dur="0.4s" begin="unload" easing="ease-in" />
		</image>

		<image id="time-minute0" href="images/0.png" class="digit primary" x="55%" y="0" />
		<image id="time-minute1" href="images/0.png" class="digit primary" x="$" y="0" />

		<g>
			<text id="time-seconds" class="text text--sm primary" text-anchor="middle" text-length="4" x="$-30" y="120" />

			<!-- Animate in -->
			<animate attributeName="opacity" from="0" to="1" dur="0.4s" begin="load" easing="ease-in" />

			<!-- Animate out -->
			<animate attributeName="opacity" from="1" to="0" dur="0.4s" begin="unload" easing="ease-in" />
		</g>

		<!-- Animate in -->
		<animate id="aod-animate-in" attributeName="opacity" from="0.6" to="1" dur="0.4s" begin="load" easing="ease-in" />

		<!-- Animate out -->
		<animate id="aod-animate-out" attributeName="opacity" from="1" to="0.6" dur="0.4s" begin="unload" easing="ease-in" final="freeze" />
	</g>

	<section height="80" y="170">
		<g id="bottom-bar">
			<use id="cycleview" href="#cycleview">
				<use href="#cycleview-item">
					<g id="date-display" transform="translate(0,50%)">
						<text id="date-date" class="text text--lg secondary" text-anchor="middle" text-length="16" x="50%" y="0" />
						<rect id="date-highlight-bg" x="0" y="0" height="0" width="0" fill="fb-black"/>
						<text id="date-highlight" class="text text--lg primary theme-color--accent-foreground" text-anchor="end" text-length="2" y="0" />
					</g>
				</use>
				<use href="#cycleview-item">
					<g id="activity0-display" transform="translate(0,50%)" visibility="hidden">
						<use href="#activity-display-symbol">
							<set href="activity-left-goal" attributeName="id" to="activity0-left-goal" />
							<set href="activity-left-progress" attributeName="id" to="activity0-left-progress" />
							<set href="activity-left-icon" attributeName="id" to="activity0-left-icon" />
							<set href="activity-left-value" attributeName="id" to="activity0-left-value" />
							<set href="activity-left-units" attributeName="id" to="activity0-left-units" />
							<set href="activity-right-goal" attributeName="id" to="activity0-right-goal" />
							<set href="activity-right-progress" attributeName="id" to="activity0-right-progress" />
							<set href="activity-right-icon" attributeName="id" to="activity0-right-icon" />
							<set href="activity-right-value" attributeName="id" to="activity0-right-value" />
							<set href="activity-right-units" attributeName="id" to="activity0-right-units" />
						</use>
					</g>
				</use>
				<use href="#cycleview-item">
					<g id="activity1-display" transform="translate(0,50%)" visibility="hidden">
						<use href="#activity-display-symbol">
							<set href="activity-left-goal" attributeName="id" to="activity1-left-goal" />
							<set href="activity-left-progress" attributeName="id" to="activity1-left-progress" />
							<set href="activity-left-icon" attributeName="id" to="activity1-left-icon" />
							<set href="activity-left-value" attributeName="id" to="activity1-left-value" />
							<set href="activity-left-units" attributeName="id" to="activity1-left-units" />
							<set href="activity-right-goal" attributeName="id" to="activity1-right-goal" />
							<set href="activity-right-progress" attributeName="id" to="activity1-right-progress" />
							<set href="activity-right-icon" attributeName="id" to="activity1-right-icon" />
							<set href="activity-right-value" attributeName="id" to="activity1-right-value" />
							<set href="activity-right-units" attributeName="id" to="activity1-right-units" />
						</use>
					</g>
				</use>
				<use href="#cycleview-item">
					<use id="donate-button" href="#square-button-icon" fill="fb-green" y="-5" height="60" layer="200" visibility="hidden">
						<set href="#text" attributeName="text-buffer" to="Donate" />
						<set href="#image" attributeName="href" to="images/heart.png" />
					</use>
				</use>
			</use>

			<!-- Animate in -->
			<animate attributeName="opacity" from="0" to="1" dur="0.4s" begin="load" easing="ease-in" />
			<animateTransform attributeType="translate" from="0,100%+30" to="0,96%-2" dur="0.3s" begin="load" easing="ease-in" />
			<animateTransform attributeType="translate" from="0,96%-2" to="0,96%" dur="0.1s" begin="load+0.3s" easing="ease-out" />

			<!-- Animate out -->
			<animate attributeName="opacity" from="1" to="0" dur="0.4s" begin="unload" easing="ease-in" />
			<animateTransform attributeType="translate" from="0,96%" to="0,96%-2" dur="0.1s" begin="unload" easing="ease-out" />
			<animateTransform attributeType="translate" from="0,96%-2" to="0,100%+30" dur="0.3s" begin="unload+0.1s" easing="ease-in" />
		</g>
	</section>

	<image id="editable-overlay" href="images/editing-overlay.png" class="bg bg--editing-overlay" x="0" y="0" display="none">
		<animate attributeName="opacity" to="1" dur="0.3s" begin="enable" easing="ease-out" />
		<animate attributeName="opacity" from="1" to="0" dur="0.4s" begin="enable+1.7s" easing="ease-in" />
	</image>

	<rect id="trigger" x="0" y="0" height="100%" width="100%" layer="100" pointer-events="visible" fill="none" />

	<use id="donate-popup" href="#donate-popup" layer="200" pointer-events="visible" display="none" overflow="hidden" />
</svg>
